        $form['field_loop_documents_menu_display']['add_document'] = array(
          '#type' => 'container',
          '#attributes' => array('class' => array('container-inline')),
          '#weight' => 100,
          '#prefix' => '<div id="loop-documents-add-document">',
          '#suffix' => '</div>',
        );

